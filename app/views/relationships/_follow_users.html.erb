</div>
  <% users.each do |user| %>
    <div class="post-area col-8 offset-2">
      <div class="row">
        <%= render 'users/profile', user: user %>
        <%= user.name %>
        <%= render 'relationships/follow_button', user: user %>
      </div>
          <%= user.introduction %><br>
    </div>
  <% end %>
