<div class="offset-2">
<%= render 'users/profile', user: @user %>
<div class="font-name-bg"><%= @user.name %></div>
</div>
<div class="row text-center">
<%= link_to "フォロワー", followers_user_path(@user), class: "col-4 offset-2" %>
