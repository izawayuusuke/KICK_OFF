<div class="offset-2">
<%= form_for @user, builder: FormHelper::CustomFormBuilder do |f| %>
  <%= render 'profile', user: @user %>

  <div class="field">
    <%= f.label :profile_image, "プロフィール画像を変更", class: "btn btn-primary" %>
    <%= f.file_field :profile_image, style: "display: none;" %>
  </div><br>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.country_select :country, {}, class: "custom-select", size: 1 %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class: "btn btn-outline-primary" %>
  </div>
<% end %>
</div>
