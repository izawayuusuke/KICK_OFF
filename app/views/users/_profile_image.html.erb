<% if controller.controller_name == "notifications" || controller.controller_name == "rooms" ||
      current_page?(users_path) %>
  <% if user.profile_image? %>
    <%= image_tag user.profile_image.url, class: "image-sm", id: "user_img_prev" %>
  <% else %>
    <%= image_tag "no_image.png", class: "image-sm", id: "user_img_prev" %>
  <% end %>

<% else %>
  <%= link_to user_path(user) do %>
    <% if user.profile_image? %>
      <%= image_tag user.profile_image.url, class: "profile-image", id: "user_img_prev" %>
    <% else %>
      <%= image_tag "no_image.png", class: "profile-image", id: "user_img_prev" %>
    <% end %>
  <% end %>
<% end %>
