<div class="row">
  <div class="col-4">
    <%= render 'profile', user: @user %>
    <div class="btn">
      <% if @user == current_user %>
        <%= link_to '編集する', edit_user_path(@user), class: "btn-outline-primary" %>
      <% else %>
        <%= render 'relationships/follow_button', user: @user %>
      <% end %>
    </div>
    <div class="font-name-bg">
      <%= @user.name %>
    </div>
    <%= simple_format(@user.introduction) %>
    <div id="follow_count_<%= @user.id %>">
      <%= render 'relationships/follow_count' %>
    </div>
    <%= link_to "お気に入り", likes_user_path(@user), class:"btn btn-sm btn-outline-danger col-lg-6 col-9"%>

    <% unless @user.id == current_user.id %>
      <% if @is_room == true %>
        <%= link_to "チャット", room_path(@room_id) %>
      <% else %>
        <%= form_for @room do |f| %>
          <%= fields_for @entry do |e| %>
            <%= e.hidden_field :user_id, value: @user.id %>
          <% end %>
          <%= f.submit "チャット" %>
        <% end %>
      <% end %>
    <% end %>

  </div>
  <div class="col-8">
    <%= render 'posts/posts', posts: @posts %>
  </div>
</div>
