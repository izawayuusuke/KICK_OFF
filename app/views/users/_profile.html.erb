<% if controller.controller_name == "notifications" %>
  <%= link_to user_path(user) do %>
    <% if user.profile_image? %>
      <%= image_tag user.profile_image.url, class: "profile-image-sm", id: "user_img_prev" %>
    <% else %>
      <%= image_tag "no_image.png", class: "profile-image-sm", id: "user_img_prev" %>
    <% end %>
  <% end %>

<% else %>
  <%= link_to user_path(user) do %>
    <% if user.profile_image? %>
      <%= image_tag user.profile_image.url, class: "profile-image", id: "user_img_prev" %>
    <% else %>
      <%= image_tag "no_image.png", class: "profile-image", id: "user_img_prev" %>
    <% end %>
  <% end %>
<% end %>
