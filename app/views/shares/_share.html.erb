<% if user_signed_in? && post.shared_by?(current_user) %>
  <%= link_to post_share_path(post), method: :delete, remote: true do %>
    <i class="fas fa-retweet" style="color: blue;"></i>
    <%= post.shares.count %>
  <% end %>
<% else %>
  <%= link_to post_share_path(post), method: :post, remote: true do %>
    <i class="fas fa-retweet"></i>
    <%= post.shares.count %>
  <% end %>
<% end %>
