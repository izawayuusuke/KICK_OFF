<table class="table table-bordered col-5 offset-1">
  <thead>
    <tr>
      <th>所属チーム</th>
      <% if user_signed_in? && current_user.admin == true %>
        <th></th>
      <% end %>

    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td>
          <%= link_to team.name, team_path(team) %>
        </td>

        <% if user_signed_in? && current_user.admin == true %>
          <td>
            <%= link_to "削除する", team_belong_path(team), method: :delete,
                data: { confirm: "削除しますか？"}, class: "btn btn-danger offset-1" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
