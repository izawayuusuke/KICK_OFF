<table class="table table-bordered" style="margin-top: 50px;">
  <thead>
    <tr>
      <th>所属チーム</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td>
          <%= link_to team.name, team_path(team) %>
        </td>
        <% if user_signed_in? && current_user.admin == true %>
          <td>
            <%= link_to "削除する", team_belong_path(team), method: :delete, class: "btn btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
