<header>
  <nav class="navbar navbar-expand navbar-dark bg-primary fixed-top">
    <div class="container">
      <%= link_to root_path do %>
        <%= image_tag('title_logo.png', width: 80, class: "logo") %>
      <% end %>
      <% if user_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to root_path do %>
              <i class="far fa-bell"> notification</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to rooms_path do %>
              <i class="far fa-envelope"> message</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to current_user do %>
              <i class="far fa-user"> Profile</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>
