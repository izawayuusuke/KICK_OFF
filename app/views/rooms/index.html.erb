<h1 class="text-center">メッセージ</h1>
<% @others.each do |other| %>
    <div class="row outline">
      <%= render 'users/profile_image', user: other.user %>
      <ul class="col-10">
        <%= link_to room_path(other.room_id) do %>
          <li>
            <%= other.user.name %>
          </li>
          <li>
            <%= simple_format(other.user.introduction) %>
          </li>
        <% end %>
      </ul>
    </div>
<% end %>

<% if @others.blank? %>
  <p class="text-center no-messages">メッセージがありません</p>
<% end %>
