<%= form_for @team, builder: FormHelper::CustomFormBuilder do |f| %>
  <h4>チーム</h4>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :league_id %>
    <%= f.collection_select :league_id, League.all, :id, :name %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
