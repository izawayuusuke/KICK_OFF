<table class="table table-bordered">
  <thead>
    <tr>
      <th>選手</th>
      <th colspan="3">所属チーム</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>

        <% player.teams.each do |team| %>
          <td><%= link_to team.name, team %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'players/paginate' %>
